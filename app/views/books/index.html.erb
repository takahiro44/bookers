<p id="notice">
  <%= flash[:notice] %>
</p>

<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>

      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book.id)%>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id)%>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book.id),method: :delete,"data-confirm" => "Are you sure ?" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>


<h2>New book</h2>

<% if @book.errors.any? %>
<%= form_with model: @book do |f| %>
  <div id="error_explanation">
    <% if @book.errors.count == 2 %>
      <h2>2 errors prohibited this book from being saved</h2>
    <% end %>
    <% if @book.errors.count == 1 %>
      <h2>1 errors prohibited this book from being saved</h2>
    <% end %>
    <ul>
      <% if @book.errors[:title].any? %>
        <li>"Title can't be blank"</li>
      <% end %>
      <% if @book.errors[:body].any? %>
        <li>"Body can't be blank"</li>
      <% end %>
    </ul>
  </div>
  <% if @book.errors[:title].any? %>
    <div class="field">
      <div class="field_with_errors">
        <label>Title<label>
      </div>
      <div class="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>
  <% end %>
  <% unless @book.errors[:title].any? %>
  <div class="field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <% end %>

  <% if @book.errors[:body].any? %>
    <div class="field">
      <div class="field_with_errors">
        <label>Body</label>
      </div>
      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>
    </div>
  <% end %>
  <% unless @book.errors[:body].any? %>
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
  <% end %>

  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<% end %>


